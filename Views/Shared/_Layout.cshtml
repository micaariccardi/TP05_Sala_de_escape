<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - TPXX - Apellido</title>
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </head>
    <body>
        <img src="/imagenes/icono.png" width=50em margin-left=50em>
        <header style="position:fixed; top: 0; margin: 40px 0px 20px 60px; color:#386641;">
            TP 05
        </header>
        <div style="padding:20px 10px 0px 10px;">
            @RenderBody()
        </div>

        <footer style="color:#386641;">
                &copy; @DateTime.Now.Year - Taller de Programación - TP05
        </footer>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
